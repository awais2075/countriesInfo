<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/item_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!--android:background="#f7f1e3"-->


    <ImageView
            android:id="@+id/imageView_country"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textView_countryName"
            android:text="Pakistan"
            android:textStyle="bold"
            android:textColor="#84817a"
            android:textAlignment="center"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/font_josefin_sans_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/imageView_country"
            app:layout_constraintEnd_toEndOf="@+id/imageView_country"
            app:layout_constraintStart_toStartOf="@+id/imageView_country"/>

    <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textView_countryName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_8sdp">

        <TextView
                android:id="@+id/textView_capital"
                android:text="Islamabad"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/textView_region"
                android:text="Region"
                android:textAlignment="center"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>