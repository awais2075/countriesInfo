<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:background="#b71540"
            android:backgroundTint="#b71540"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:theme="@style/MyActionBarTheme"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.CardView
            android:id="@+id/cardView_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/appbar"
            app:layout_constraintLeft_toLeftOf="@id/appbar"
            app:layout_constraintRight_toRightOf="@id/appbar">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraintLayout_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="#b71540">

                <ImageView
                        android:id="@+id/imageView_country"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/pak"
                        android:layout_marginLeft="@dimen/_10sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                />
                <TextView
                        android:id="@+id/textView_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pakistan"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintTop_toTopOf="@id/imageView_country"
                        app:layout_constraintBottom_toBottomOf="@id/imageView_country"
                        app:layout_constraintLeft_toRightOf="@id/imageView_country"
                        android:layout_marginLeft="@dimen/_5sdp"/>
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                    android:id="@+id/linearLayout_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_8sdp"
                    app:layout_constraintLeft_toLeftOf="@id/constraintLayout_country"
                    app:layout_constraintRight_toRightOf="@id/constraintLayout_country"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_country">

                <TextView
                        android:id="@+id/textView_capitalHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capital"
                        android:fontFamily="sans-serif-black"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                />

                <TextView
                        android:id="@+id/textView_capitalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Islamabad"/>

                <View
                        android:layout_width="match_parent" android:layout_height="@dimen/_1sdp"
                        android:background="@color/grey"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                />

                <TextView
                        android:id="@+id/textView_regionHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Region"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                />

                <TextView
                        android:id="@+id/textView_regionValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asia"/>

                <View
                        android:layout_width="match_parent" android:layout_height="@dimen/_1sdp"
                        android:background="@color/grey"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                />
                <TextView
                        android:id="@+id/textView_callingCodeHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calling Code(s)"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                />

                <TextView
                        android:id="@+id/textView_callingCodeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="92"/>

                <View
                        android:layout_width="match_parent" android:layout_height="@dimen/_1sdp"
                        android:background="@color/grey"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                />
                <TextView
                        android:id="@+id/textView_topLevelDomainHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top Level Domain(s)"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"
                />

                <TextView
                        android:id="@+id/textView_topLevelDomainValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="92"/>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:id="@+id/cardView_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
                android:id="@+id/constraintLayout_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraintLayout_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="#b71540">

                <ImageView
                        android:id="@+id/imageView_border"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@mipmap/ic_border"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                />
                <TextView
                        android:id="@+id/textView_border"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Border(s)"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintTop_toTopOf="@id/imageView_border"
                        app:layout_constraintBottom_toBottomOf="@id/imageView_border"
                        app:layout_constraintLeft_toRightOf="@id/imageView_border"
                        android:layout_marginLeft="@dimen/_5sdp"/>
            </android.support.constraint.ConstraintLayout>

            <TextView
                    android:id="@+id/textView_noBorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    android:text="No Border(s)"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_border"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            <ListView
                    android:id="@+id/listView_border"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:dividerHeight="@dimen/_3sdp"
                    android:divider="@null"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayout_border"
                    app:layout_constraintLeft_toLeftOf="@id/constraintLayout_border"
                    app:layout_constraintRight_toRightOf="@id/constraintLayout_border"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp" app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>